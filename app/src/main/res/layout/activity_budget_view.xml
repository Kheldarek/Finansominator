<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_budget_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fs.ps.put.finansominator.activities.BudgetViewActivity">

    <TextView
        android:text="Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/name"
        android:layout_marginTop="15dp"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:id="@+id/name"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignRight="@+id/type"
        android:layout_alignEnd="@+id/type"
        android:id="@+id/members" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/members"
        android:layout_alignStart="@+id/members"
        android:id="@+id/owner" />

    <Button
        android:text="Reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reportsBtn"
        android:layout_below="@+id/statisticsBtn"
        android:layout_alignLeft="@+id/statisticsBtn"
        android:layout_alignStart="@+id/statisticsBtn"
        android:layout_alignRight="@+id/statisticsBtn"
        android:layout_alignEnd="@+id/statisticsBtn" />

    <Button
        android:text="Delete budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Delete"
        android:layout_below="@+id/reportsBtn"
        android:layout_alignRight="@+id/reportsBtn"
        android:layout_alignEnd="@+id/reportsBtn"
        android:layout_alignLeft="@+id/reportsBtn"
        android:layout_alignStart="@+id/reportsBtn" />

    <Button
        android:text="Statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statisticsBtn"
        android:layout_below="@+id/transactionListBtn"
        android:layout_alignLeft="@+id/transactionListBtn"
        android:layout_alignStart="@+id/transactionListBtn"
        android:layout_alignRight="@+id/transactionListBtn"
        android:layout_alignEnd="@+id/transactionListBtn" />

    <TextView
        android:text="Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Description:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_marginTop="13dp"
        android:textStyle="italic"
        android:singleLine="false"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Transaction list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transactionListBtn"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fs.ps.put.finansominator.activities.MainMenu">

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/stats"
        android:id="@+id/stats_btn"
        android:layout_alignTop="@+id/transaction_btn"
        android:layout_alignLeft="@+id/grp_budget_btn"
        android:layout_alignStart="@+id/grp_budget_btn" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/reports"
        android:id="@+id/reports_btn"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/grp_budget_btn"
        android:layout_toEndOf="@+id/grp_budget_btn"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/budget_group"
        android:id="@+id/grp_budget_btn"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/per_budget_btn"
        android:layout_toEndOf="@+id/per_budget_btn"
        android:layout_marginTop="21dp" />

    <ImageButton
        app:srcCompat="@drawable/budget_ind"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:id="@+id/per_budget_btn"
        android:layout_height="125dp"
        android:layout_width="125dp"
        android:layout_alignTop="@+id/grp_budget_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/transactions"
        android:id="@+id/transaction_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/per_budget_btn"
        android:layout_alignStart="@+id/per_budget_btn" />
</RelativeLayout>
